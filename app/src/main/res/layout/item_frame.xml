<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/preview_frames_spacing">

    <ProgressBar
        android:id="@+id/progressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/actualFrameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/decodingErrorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPreviewDecodingError"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/page_video_preview_frame_decoding_error"
        android:textAppearance="?attr/textAppearanceCaption"
        android:visibility="invisible" />

</FrameLayout>